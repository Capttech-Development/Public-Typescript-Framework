{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "types": [ "@citizenfx/server", "@types/node" ],
    "lib": [ "ES2020" ]
  },
  "include": [
    "./**/*",
    "./**/*.json"
  ],
  "exclude": [
    "**/node_modules",
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "**/__tests__/*"
  ]
}